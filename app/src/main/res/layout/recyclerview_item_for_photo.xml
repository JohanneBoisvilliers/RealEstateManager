<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/container_photo_details"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>
    <ImageView
        android:id="@+id/background_description_recyclerview"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="@id/container_photo_details"
        app:layout_constraintBottom_toBottomOf="@id/container_photo_details"
        app:layout_constraintRight_toRightOf="@id/container_photo_details"
        android:alpha="0.6"/>
    <TextView
        android:id="@+id/description_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintLeft_toLeftOf="@id/container_photo_details"
        app:layout_constraintBottom_toBottomOf="@id/container_photo_details"
        app:layout_constraintRight_toRightOf="@id/container_photo_details"
        app:layout_constraintTop_toTopOf="@id/background_description_recyclerview"
        android:text="description"
        android:gravity="center"/>

</android.support.constraint.ConstraintLayout>