<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.AddARealEstateActivity">


            <Spinner
                android:id="@+id/spinner_realestate_type"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:spinnerMode="dropdown"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/type_info"/>


        <TextView
            android:id="@+id/type_info"
            android:textSize="12sp"
            android:text="type"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintRight_toLeftOf="@+id/spinner_realestate_type"
            app:layout_constraintTop_toTopOf="@+id/spinner_realestate_type"
            app:layout_constraintBottom_toBottomOf="@id/spinner_realestate_type"
            app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>