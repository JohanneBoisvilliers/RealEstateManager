<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.AddARealEstateActivity">

    <ImageView
        android:id="@+id/image_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/type_logo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/baseline_add_a_photo_black_24"
        app:layout_constraintEnd_toEndOf="@+id/type_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_header" />

    <TextView
        android:id="@+id/type_info"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_to_border"
        android:gravity="center"
        android:text="Type :"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/spinner_realestate_type"
        app:layout_constraintTop_toBottomOf="@+id/type_logo" />

    <Spinner
        android:id="@+id/spinner_realestate_type"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/margin_to_border"
        android:spinnerMode="dropdown"
        android:textSize="@dimen/text_in_spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/type_info"
        app:layout_constraintTop_toBottomOf="@id/type_info" />

    <TextView
        android:id="@+id/price_info"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Price :"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_info"

        app:layout_constraintBottom_toBottomOf="@id/spinner_realestate_type"
        app:layout_constraintLeft_toRightOf="@id/spinner_realestate_type"
        app:layout_constraintRight_toLeftOf="@id/price_entry"
        app:layout_constraintTop_toTopOf="@+id/spinner_realestate_type" />

    <EditText
        android:id="@+id/price_entry"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/margin_to_border"
        app:layout_constraintBottom_toBottomOf="@id/spinner_realestate_type"
        app:layout_constraintLeft_toRightOf="@+id/price_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner_realestate_type" />


</android.support.constraint.ConstraintLayout>